<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/recycler_item_checkbox"
        android:layout_width="31dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/recycler_item_material"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/recycler_item_checkbox"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/recycler_item_cant"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_item_material"
        android:layout_marginStart="23dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/recycler_item_checkbox"
        android:text="@string/ri_in_can" />

</RelativeLayout>